<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiyun.shuaijie.weekre.CodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/code_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffff">

        <ImageView
            android:id="@+id/code_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/u34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="验证" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/code_num"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="验证码" />

        <Button
            android:id="@+id/code_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/code_num"
            android:background="@drawable/yanzheng"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/code_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="#00ffff"
        android:text="提交" />


</RelativeLayout>
